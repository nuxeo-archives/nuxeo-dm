<?xml version="1.0" encoding="UTF-8"?>
<theme name="galaxy" template-engines="jsf-facelets" resource-bank="nuxeo">
  <layout>
    <page name="default">
      <section name="header">
        <cell>
          <!-- logo -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- user services -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- Include -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <!-- tree view -->
          <fragment perspectives="default,multiple_domains" type="generic fragment"/>
          <!-- clip board -->
          <fragment perspectives="default,multiple_domains" type="generic fragment"/>
          <!-- calendar -->
          <fragment perspectives="view_calendar" type="generic fragment"/>
        </cell>
        <cell>
          <!-- breadcrumbs -->
          <fragment type="generic fragment"/>
          <!-- main area -->
          <fragment type="region fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <!-- copyrights -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
    </page>
    <page name="popup">
      <section>
        <cell>
          <!-- main area -->
          <fragment type="region fragment"/>
        </cell>
        <cell>
          <!-- Include -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
    </page>
    <page name="user_dashboard">
      <section name="header">
        <cell>
          <!-- logo -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- user services -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- includes -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <!-- breadcrumbs -->
          <fragment type="generic fragment"/>
          <!-- domain selection -->
          <fragment perspectives="multiple_domains" type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <!-- user tasks -->
          <fragment type="generic fragment"/>
          <!-- user processes -->
          <fragment type="generic fragment"/>
          <!-- user workspaces -->
          <fragment type="generic fragment"/>
          <!-- user sites -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- user documents -->
          <fragment type="generic fragment"/>
          <!-- last documents -->
          <fragment type="generic fragment"/>
          <!-- last published document -->
          <fragment type="generic fragment"/>
          <fragment type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <!-- copyrights -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
    </page>
    <page name="print">
      <section>
        <cell>
          <!-- includes -->
          <fragment type="generic fragment"/>
          <!-- breadcrumbs -->
          <fragment type="generic fragment"/>
          <!-- main area -->
          <fragment type="region fragment"/>
        </cell>
      </section>
    </page>
  </layout>
  <properties element="page[1]/section[2]/cell[2]/fragment[2]">
    <name>body</name>
    <defaultBody/>
    <defaultSrc/>
  </properties>
  <properties element="page[2]/section[1]/cell[1]/fragment[1]">
    <name>body</name>
    <defaultBody/>
    <defaultSrc/>
  </properties>
  <properties element="page[4]/section[1]/cell[1]/fragment[3]">
    <name>body</name>
    <defaultBody/>
    <defaultSrc/>
  </properties>
